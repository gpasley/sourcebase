	    <div id="header">
		  <%= render :partial => 'layouts/header'%>
	    </div>
        <div id="menu">
		  <%= render :partial => 'layouts/menu_nav'%>
	    </div>
	  
        <p style="color: green"><%= flash[:notice] %></p>
  		  <div id="main">

			<%= yield %>
   
		  </div>
	
		<div id="footer" align="center">
		  <%= render :partial => 'layouts/footer'%>
	    </div>
	  
</body>
</html>